<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProduct">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="366dp"
        android:layout_height="602dp"
        android:layout_margin="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp"
        card_view:cardMaxElevation="10dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="571dp"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Product Details"
                android:textColor="#000000"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="138dp"
                tools:layout_editor_absoluteY="80dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ProductID:"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="138dp"
                tools:layout_editor_absoluteY="80dp" />

            <EditText
                android:id="@+id/viewTxtProductID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:enabled="false"
                android:hint="Product ID"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:layout_editor_absoluteX="99dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name:"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="138dp"
                tools:layout_editor_absoluteY="80dp" />

            <EditText
                android:id="@+id/viewTxtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:enabled="false"
                android:hint="Product Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:layout_editor_absoluteX="99dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Description:"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="138dp"
                tools:layout_editor_absoluteY="80dp" />

            <EditText
                android:id="@+id/viewTxtProductDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:enabled="false"
                android:hint="Product Description"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                tools:layout_editor_absoluteX="99dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Price:"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="138dp"
                tools:layout_editor_absoluteY="80dp" />

            <EditText
                android:id="@+id/viewTxtProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:enabled="false"
                android:hint="Price"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"
                tools:layout_editor_absoluteX="99dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Qty:"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="138dp"
                tools:layout_editor_absoluteY="80dp" />

            <EditText
                android:id="@+id/viewTxtProductQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:enabled="false"
                android:hint="Quantity"
                android:inputType="number"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal"
                tools:layout_editor_absoluteX="99dp" />

            <Button
                android:id="@+id/viewEditButton"
                android:layout_width="211dp"
                android:layout_height="59dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#0FB3D1"
                android:text="Edit"
                app:layout_constraintTop_toBottomOf="@+id/editButton"
                tools:layout_editor_absoluteX="98dp" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="211dp"
                android:layout_height="59dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="#EF4040"
                android:text="CANCEL"
                app:layout_constraintTop_toBottomOf="@+id/cancelButton"
                tools:layout_editor_absoluteX="98dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>